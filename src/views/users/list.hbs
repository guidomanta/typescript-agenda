<div class="row">
    {{#each users}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h3>{{firstName}} {{lastName}}</h3>
                <p>Phone: {{phone}}</p>
                <p>Email: {{email}}</p>
            </div>
            <form action="/appointments/create" method="POST">
                <input type="hidden" id="userId" name="userId" value="{{_id}}">
                Start: <input type="datetime-local" name="startDate">
                End: <input type="datetime-local" name="endDate">
                <div class="card-footer d-flex align-items-center">
                    <button type="submit" class="btn btn-primary btn-block">Schedule Appointment</button>
                </div>
            </form>
        </div>
    </div>
    {{/each}}
</div>